<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <!-- Set default logging level to WARN for all packages -->
        <Root level="WARN">
            <AppenderRef ref="Console"/>
        </Root>

        <!-- Set logging level for your specific test class to INFO -->
        <Logger name="com.audree.infotech.ums3_0.tests.masters.SoftwareTest" level="INFO" additivity="false">
            <AppenderRef ref="Console"/>
        </Logger>
    </Loggers>
</Configuration>
